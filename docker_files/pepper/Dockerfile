FROM ubuntu:xenial

# install packages
RUN apt-get update && apt-get install -y --no-install-recommends \
    dirmngr \
    gnupg2 \
    net-tools \
    iputils-ping \
    netcat \
    iproute2 \
    vim \
    ssh\
    && rm -rf /var/lib/apt/lists/*

# setup keys
RUN apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv-keys 421C365BD9FF1F717815A3895523BAEEB01FA116

# setup sources.list
RUN echo "deb http://packages.ros.org/ros/ubuntu xenial main" > /etc/apt/sources.list.d/ros-latest.list

# install bootstrap tools
RUN apt-get update && apt-get install --no-install-recommends -y \
    python-rosdep \
    python-rosinstall \
    python-vcstools \
    python-catkin-tools \
    && rm -rf /var/lib/apt/lists/*

# setup environment
ENV LANG C.UTF-8
ENV LC_ALL C.UTF-8

# bootstrap rosdep
RUN rosdep init \
    && rosdep update

# install ros packages
ENV ROS_DISTRO kinetic
RUN apt-get update && apt-get install -y \
    ros-kinetic-ros-core \
    ros-kinetic-ros-tutorials\
    ros-kinetic-catkin \
    # Visualisation general
    ros-kinetic-rviz \
    ros-kinetic-rqt\
    ros-kinetic-rqt-common-plugins\
    # General pepper/NaoQi
#    ros-kinetic-nao-robot \
    ros-kinetic-naoqi-bridge-msgs \
    ros-kinetic-pepper-robot\
    ros-kinetic-pepper-dcm-bringup\
    # Pepper visualisation/simulation
    ros-kinetic-pepper-meshes\
    ros-kinetic-pepper-gazebo-plugin\
    # MoveIt planning
    ros-kinetic-moveit\
    ros-kinetic-pepper-moveit-config\
    && rm -rf /var/lib/apt/lists/*

# Additional useful python libraries
RUN apt update && apt install -y \
    python-opencv \
    python-cv-bridge \
    python-matplotlib

# setup entrypoint
COPY ./ros_entrypoint.sh /

